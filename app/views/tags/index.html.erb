<section>
  <div class='row' >
    <div class='col-md-1'></div>
    <div class='col-md-10'>
      <%= render 'layouts/messages' %>
      <h3>Tags</h3>
      <%= link_to 'New tag', new_tag_path, class: "btn btn-primary pull-right" %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td><%= tag.name %></td>
                <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
                <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class='col-md-1'></div>
  </div>
</section>
