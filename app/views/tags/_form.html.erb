
<%= form_for @tag, :html => {role: 'form'} do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class='form-group'>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
